{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
    }
  },
  "include": [
    "./src/**/*"
  ]
}